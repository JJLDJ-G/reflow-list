{
  "name": "reflowlist",
  "displayName": "ReflowList",
  "description": "Reflows text, handling lists cleanly.",
  "version": "0.0.1",
  "publisher": "garyrholt",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:reflowlist.reflowParagraph"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reflowlist.reflowParagraph",
        "title": "Reflow the current text."
      }
    ],
    "configuration": {
      "title": "Reflow",
      "properties": {
        "reflowlist.commentRegexp": {
          "type": "string",
          "default": "\\s*(?://|\\*|/\\*|#)",
          "description": "Regular expression matching comments to reformat."
        },
        "reflowlist.listStartRegexp": {
          "type": "string",
          "default": "(-|o|[a-zA-Z][.)]|\\d+[.)])\\s",
          "description": "Regular expression matching list begin elements."
        },
        "reflowlist.additionalParagraphEndings": {
          "type": "string",
          "default": "'''|\"\"\"|{|}",
          "description": "Additional strings (besides changes in whitespace) that imply end of a paragraph."
        },
        "reflowlist.wrapColumn": {
          "type": "integer",
          "default": 80,
          "description": "What column to wrap at."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
